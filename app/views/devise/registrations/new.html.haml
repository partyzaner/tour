%h2.text-center Зарегистрироваться
.container.col-5
  =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    =devise_error_messages!
    %div.form-group
      =f.label :email
      =f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'sample@gmail.com'
    %div.form-group
      =f.label 'Пароль'
      -if @minimum_password_length
        %em (Минимум #{@minimum_password_length} символов)
      =f.password_field :password, autocomplete: 'off', class: 'form-control'
    %div.form-group
      =f.label 'Подтвердите пароль'
      =f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
    %div.actions.form-group
    = f.submit 'Зарегистрироваться', class: 'form-control btn btn-primary'
  -#= render "devise/shared/links"