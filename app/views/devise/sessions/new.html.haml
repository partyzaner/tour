%div.container.col-5
  %h2.text-center Войти на сайт
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'example@gmail.com'
    .form-group
      = f.label 'Пароль'
      = f.password_field :password, autocomplete: "off", class: 'form-control'
      -if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label 'Запомнить меня'
    .actions
      = f.submit 'Войти', class: 'form-control btn btn-primary'
  -#= render "devise/shared/links"
